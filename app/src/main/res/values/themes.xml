<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Parking5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_light</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="Theme.Parking5.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Parking5.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Parking5.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- 按钮背景颜色 -->
        <item name="android:background">@color/gray_light</item>

        <!-- 按钮文本颜色 -->
        <item name="android:textColor">@color/gray_dark</item>

        <!-- 其他按钮属性 -->
    </style>
</resources>